<script>
import { ref, computed, onMounted, watch } from 'vue'
import { useRouter } from 'vue-router'
import authService from '@/services/authService'

export default {
  name: 'Dashboard',
  setup() {
    const router = useRouter()
    const sessionInfo = ref(null)
    const isLoading = ref(true)
    const error = ref(null)
    const userProfile = ref(null)
    const showProfileDropdown = ref(false)
    const selectedPeriod = ref('Semana')

    // Dados de exemplo para transa√ß√µes recentes
    const recentTransactions = ref([
      {
        id: 1,
        description: 'Venda de Milhas',
        type: 'sale',
        amount: 2500,
        miles: 100000,
        date: '10/05/2023',
        time: '14:30'
      },
      {
        id: 2,
        description: 'Compra de Milhas',
        type: 'purchase',
        amount: -1500,
        miles: 50000,
        date: '09/05/2023',
        time: '10:15'
      },
      {
        id: 3,
        description: 'Transfer√™ncia entre contas',
        type: 'transfer',
        amount: 0,
        miles: 25000,
        date: '08/05/2023',
        time: '16:45'
      }
    ])

    // Inicia do usu√°rio
    const userInitials = computed(() => {
      if (!userProfile.value?.name) return '?'
      return userProfile.value.name
        .split(' ')
        .map(n => n[0])
        .join('')
        .toUpperCase()
        .substring(0, 2)
    })

    // Verifica se o usu√°rio est√° autenticado
    const isAuthenticated = computed(() => {
      return !!sessionInfo.value?.accessToken
    })

    // Formata valores monet√°rios
    const formatCurrency = (value) => {
      return new Intl.NumberFormat('pt-BR', {
        style: 'currency',
        currency: 'BRL'
      }).format(value)
    }

    // Obt√©m classes CSS com base no tipo de transa√ß√£o
    const getTransactionTypeClass = (type) => {
      const types = {
        sale: { bg: 'bg-green-500', icon: 'CurrencyDollarIcon' },
        purchase: { bg: 'bg-red-500', icon: 'ShoppingCartIcon' },
        transfer: { bg: 'bg-blue-500', icon: 'ArrowsRightLeftIcon' },
        default: { bg: 'bg-gray-500', icon: 'QuestionMarkCircleIcon' }
      }
      return types[type] || types.default
    }

    // Manipula o logout
    const handleLogout = async () => {
      try {
        await authService.logout()
        router.push('/login')
      } catch (err) {
        console.error('Erro ao fazer logout:', err)
      }
    }

    // Carrega os dados da sess√£o
    const loadSession = async () => {
      isLoading.value = true
      error.value = null
      try {
        const session = await authService.getSession()
        sessionInfo.value = session
        userProfile.value = session?.user || { name: 'Usu√°rio' }
      } catch (err) {
        console.error('Erro ao carregar sess√£o:', err)
        error.value = 'N√£o foi poss√≠vel carregar os dados da sess√£o.'
      } finally {
        isLoading.value = false
      }
    }

    // Observa mudan√ßas na autentica√ß√£o
    watch(isAuthenticated, (newVal) => {
      if (!newVal) {
        router.push('/login')
      }
    })

    // Carrega os dados quando o componente √© montado
    onMounted(() => {
      loadSession()
    })

    return {
      sessionInfo,
      isLoading,
      error,
      userProfile,
      userInitials,
      recentTransactions,
      showProfileDropdown,
      selectedPeriod,
      formatCurrency,
      getTransactionTypeClass,
      handleLogout
    }
  }
}
</script>

